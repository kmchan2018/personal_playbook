{% endif -%}
{% endfor %}

{% for section in account_firefox_firejail_options|default([]) -%}
{% if section.profiles is not defined or section.profiles == 'all' or profile.name in section.profiles %}
#
# {{ section.name }}
#

{% for line in section.rules %}
{{ line }}
{% endfor %}

{% endif -%}
{% endfor %}
#
# include the system profile
#

include ${CFG}/firefox.profile

