join-or-start kmchan-firefox-{{ profile.name }}

#
# blacklist other profile directories
#

{% for item in account_firefox_profiles|default([]) -%}
{% if item.name != profile.name %}
blacklist ${HOME}/.cache/mozilla/firefox/{{ item.directory }}
{% endif -%}
{% endfor %}

