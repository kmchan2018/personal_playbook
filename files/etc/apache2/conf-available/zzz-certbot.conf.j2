# vim: syntax=apache ts=4 sw=4 sts=4 sr noet


#########################################################################
#
# Alias the certbot ACME challenge URL for all virtual hosts to the
# target directory.
#

Alias "/.well-known/acme-challenge/" "/var/www/certbot/.well-known/acme-challenge/"


#########################################################################
#
# Setup the proper permissions and options for directory storing certbot
# ACME challenges.
#

<Directory /var/www/certbot>
	Options None -Indexes
	Require all granted
</Directory>


