##########################################################################
#
# Ensure that subversion files are not served. These files may contain
# data which should be private.
#

<DirectoryMatch "/\.svn">
	Require all denied
</DirectoryMatch>


##########################################################################
#
# Ensure that git files are not served. These files may contain data which
# should be private.
#

<DirectoryMatch "/\.git">
	Require all denied
</DirectoryMatch>


