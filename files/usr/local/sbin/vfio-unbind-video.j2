#!/bin/bash

#
# The file unbinds {{ item.value['name'] }} from vfio-pci module so that it
# can be used on the host.
#

{% for address in item.value['address'] %}
echo 1 > /sys/bus/pci/devices/{{ address|pciaddr('pciutils') }}/remove
{% endfor %}

sleep 1
echo 1 > /sys/bus/pci/rescan

rm -f "/run/vfio-bind-video-{{ item.key }}.lock"

